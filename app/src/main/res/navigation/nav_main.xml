<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/discoverFragment">

    <fragment
        android:id="@+id/discoverFragment"
        android:name="com.example.riddlemethis.DiscoverFragment"
        android:label="fragment_discover"
        tools:layout="@layout/fragment_discover" />
  
    <navigation android:id="@+id/loginGraph"
        app:startDestination="@id/loginFragment">
        <fragment
            android:id="@+id/createAccountFragment"
            android:name="com.example.riddlemethis.CreateAccountFragment"
            android:label="fragment_create_account"
            tools:layout="@layout/fragment_create_account" >
            <action
                android:id="@+id/action_createAccountFragment_to_loginFragment"
                app:destination="@id/loginFragment"
                app:popUpTo="@+id/loginFragment"
                app:popUpToInclusive="true" />
        </fragment>
        <fragment
            android:id="@+id/loginFragment"
            android:name="com.example.riddlemethis.LoginFragment"
            android:label="fragment_login"
            tools:layout="@layout/fragment_login" >
            <action
                android:id="@+id/action_loginFragment_to_createAccountFragment"
                app:destination="@id/createAccountFragment" />
            <action
                android:id="@+id/action_loginFragment_to_resetPasswordFragment"
                app:destination="@id/resetPasswordFragment" />
        </fragment>
        <action
            android:id="@+id/action_global_discoverFragment"
            app:destination="@id/discoverFragment"
            app:popUpTo="@+id/loginGraph"
            app:popUpToInclusive="true" />
        <fragment
            android:id="@+id/resetPasswordFragment"
            android:name="com.example.riddlemethis.ResetPasswordFragment"
            android:label="fragment_reset_password"
            tools:layout="@layout/fragment_reset_password" >
            <action
                android:id="@+id/action_resetPasswordFragment_to_loginFragment"
                app:destination="@id/loginFragment"
                app:popUpTo="@+id/loginFragment"
                app:popUpToInclusive="true" />
            <action
                android:id="@+id/action_resetPasswordFragment_to_resetSuccessFragment"
                app:destination="@id/resetSuccessFragment"
                app:popUpToInclusive="false" />
        </fragment>
        <action
            android:id="@+id/action_loginGraph_myRiddlesFragment"
            app:destination="@id/myRiddlesFragment"
            app:popUpTo="@+id/loginGraph"
            app:popUpToInclusive="true" />
        <fragment
            android:id="@+id/resetSuccessFragment"
            android:name="com.example.riddlemethis.ResetSuccessFragment"
            android:label="fragment_reset_success"
            tools:layout="@layout/fragment_reset_success" >
            <action
                android:id="@+id/action_resetSuccessFragment_to_loginFragment"
                app:destination="@id/loginFragment"
                app:popUpTo="@+id/loginFragment"
                app:popUpToInclusive="true" />
        </fragment>
    </navigation>
    <action
        android:id="@+id/action_global_loginGraph"
        app:destination="@id/loginGraph" />
    <fragment
        android:id="@+id/myRiddlesFragment"
        android:name="com.example.riddlemethis.MyRiddlesFragment"
        android:label="fragment_myriddles"
        tools:layout="@layout/fragment_myriddles" >
        <action
            android:id="@+id/action_myRiddlesFragment_to_viewMyRiddleFragment"
            app:destination="@id/viewMyRiddleFragment" />
        <action
            android:id="@+id/action_myRiddlesFragment_to_createRiddleFragment"
            app:destination="@id/createRiddleFragment" />
    </fragment>
    <fragment
        android:id="@+id/myAccountFragment"
        android:name="com.example.riddlemethis.MyAccountFragment"
        android:label="fragment_my_account"
        tools:layout="@layout/fragment_my_account" >
        <action
            android:id="@+id/action_myAccountFragment_to_myRiddlesFragment"
            app:destination="@id/myRiddlesFragment" />
        <action
            android:id="@+id/action_myAccountFragment_to_discoverFragment"
            app:destination="@id/discoverFragment" />
        <action
            android:id="@+id/action_myAccountFragment_to_loginGraph"
            app:destination="@id/loginGraph" />
    </fragment>
    <fragment
        android:id="@+id/viewMyRiddleFragment"
        android:name="com.example.riddlemethis.ViewMyRiddleFragment"
        android:label="fragment_viewmyriddle"
        tools:layout="@layout/fragment_viewmyriddle" />
    <fragment
        android:id="@+id/createRiddleFragment"
        android:name="com.example.riddlemethis.CreateRiddleFragment"
        android:label="fragment_create_riddle"
        tools:layout="@layout/fragment_create_riddle" />
</navigation>